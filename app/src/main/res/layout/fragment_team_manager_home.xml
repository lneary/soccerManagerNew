<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamManagerHomeFragment"
    android:gravity="center"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/teamManagerHomeBadge"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/default_logo"
        />
    <TextView
        android:id="@+id/teamManagerHomeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Name Not Found"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/teamManagerHomePlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Size Not Found"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/teamManagerHomeRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Team Record Not Found"/>


</LinearLayout>